<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EBEBEB"
        android:orientation="vertical" >

        <include
            android:id="@+id/consultation_header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/header" />

        <TextView
            android:id="@+id/search_patient_result_no_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/consultation_color_white"
            android:gravity="center"
            android:paddingTop="10dp"
            android:visibility="gone"
            android:paddingBottom="10dp"
            android:text="对不起,没有该患者!"
            android:textColor="#7B7C7C" />

        <LinearLayout
            android:id="@+id/search_patient_result_layout_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:background="@color/consultation_color_white"
                android:orientation="vertical"
                android:paddingBottom="3dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="3dp" >

                <TextView
                    android:id="@+id/search_patient_result_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="#7B7C7C" />

                <TextView
                    android:id="@+id/search_patient_result_sex_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="#7B7C7C" />

                <TextView
                    android:id="@+id/search_patient_result_phone_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="#7B7C7C" />

                <TextView
                    android:id="@+id/search_patient_result_birthday_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="#7B7C7C" />

                <TextView
                    android:id="@+id/search_patient_result_address_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="#7B7C7C" />

                <TextView
                    android:id="@+id/search_patient_result_balance_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="#7B7C7C" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/search_patient_result_code_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/consultation_color_white"
                android:paddingBottom="10dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="3dp" >

                <TextView
                    android:id="@+id/search_patient_result_code_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3.5"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="验证码"
                    android:textColor="#7B7C7C" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <EditText
                        android:id="@+id/search_patient_result_code_input_edit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/consultation_color_white"
                        android:gravity="center_vertical"
                        android:hint="请输入手机验证码"
                        android:inputType="number"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textColorHint="#D3D3D3" />

                    <Button
                        android:id="@+id/search_patient_result_phone_get_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:background="@drawable/login_register_btn_shape"
                        android:singleLine="true"
                        android:text="获取验证"
                        android:textColor="@color/consultation_color_2CB67A" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#DADADA" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" >

                <Button
                    android:id="@+id/search_patient_result_btn_determine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/login_login_btn_shape"
                    android:text="确定"
                    android:textColor="@color/consultation_color_white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>