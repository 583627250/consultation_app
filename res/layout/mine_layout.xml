<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@color/consultation_color_E8D8D8"
       android:orientation="vertical" >
       
        <include
	        android:id="@+id/consultation_header"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        layout="@layout/header" />
    
          <LinearLayout
            android:id="@+id/mine_my_info_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:padding="8dp"
            android:background="@color/consultation_color_white"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal" >
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1.3">
                
                <ImageView
			        android:id="@+id/mine_info_imageView"
			        android:layout_width="50dip"
			        android:layout_height="50dip"
			        android:src="@drawable/ic_launcher"
			        android:scaleType="fitXY" /> 
            </LinearLayout>
            
		        
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
	                android:id="@+id/mine_info_realname"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:textColor="@color/consultation_color_black"
	                android:text="张三"
	                android:textStyle="bold"/>
                <TextView
	                android:id="@+id/mine_info_department"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:text="内科|专家"/>
                <TextView
	                android:id="@+id/mine_info_hospital"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:text="某某医院"/>
                
            </LinearLayout>

            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
	                android:id="@+id/mine_info_more_text"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:gravity="right"
	                android:paddingRight="4dp"
	                android:layout_gravity="center_vertical"
	                android:text="我的资料"/>
                	
                 <ImageView
			        android:id="@+id/mine_info_more_image"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center_vertical"
			        android:paddingRight="7dp"
			        android:layout_weight="5"
			        android:src="@drawable/icon_item_arrow" />
                
            </LinearLayout>
            
            
        </LinearLayout>
        
          <LinearLayout
            android:id="@+id/mine_my_account_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:background="@color/consultation_color_white"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal" >
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                
                <ImageView
			        android:layout_gravity="center"
			        android:id="@+id/mine_account_imageView"
			        android:layout_width="20dip"
			        android:layout_height="20dip"
			        android:src="@drawable/ic_launcher"
			        android:scaleType="fitXY" /> 
			        
                <TextView
	                android:id="@+id/mine_info_account_text"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:paddingLeft="4dp"
	                android:textSize="30sp"
	                android:layout_gravity="center_vertical"
	                android:textColor="@color/consultation_color_black"
	                android:text="我的账户"/>
            </LinearLayout>

            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
	                android:id="@+id/mine_info_balance_text"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:gravity="right"
	                android:paddingRight="4dp"
	                android:layout_gravity="center_vertical"
	                android:text="余额：100元"/>
                	
                 <ImageView
			        android:id="@+id/mine_info_balance_image"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:paddingRight="7dp"
			        android:layout_weight="7"
			        android:layout_gravity="center_vertical"
			        android:src="@drawable/icon_item_arrow" />
            </LinearLayout>
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/mine_my_message_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:layout_gravity="center_vertical"
            android:background="@color/consultation_color_white"
            android:orientation="horizontal" >
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                
                <ImageView
			        android:layout_gravity="center"
			        android:id="@+id/mine_message_imageView"
			        android:layout_width="20dip"
			        android:layout_height="20dip"
			        android:src="@drawable/ic_launcher"
			        android:scaleType="fitXY" /> 
			        
                <TextView
	                android:id="@+id/mine_info_message_text"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:paddingLeft="4dp"
	                android:layout_gravity="center_vertical"
	                android:textColor="@color/consultation_color_black"
	                android:text="消息中心"/>
            </LinearLayout>

            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:layout_weight="1">
                
                <ImageView
	                android:id="@+id/mine_info_message_count_image"
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:src="@drawable/message_count_4"
	                android:paddingRight="6dp"
	                android:layout_gravity="center"
	                android:textColor="@color/consultation_color_white"
	                android:textSize="14sp"/>
	             <!-- <TextView
	                android:id="@+id/mine_info_message_count_text"
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:paddingLeft="4dp"
	                android:layout_gravity="center"
	                android:gravity="center"
	                android:background="@drawable/message_count"
	                android:textColor="@color/consultation_color_white"
	                android:text="4"/> -->
                	
                 <ImageView
			        android:id="@+id/mine_info_message_image"
			        android:layout_width="wrap_content"
			        android:layout_height="match_parent"
			        android:paddingRight="7dp"
			        android:src="@drawable/icon_item_arrow" />
            </LinearLayout>
        </LinearLayout>
        
         <LinearLayout
            android:id="@+id/mine_my_jion_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:background="@color/consultation_color_white"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal" >
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                
                <ImageView
			        android:layout_gravity="center"
			        android:id="@+id/mine_join_imageView"
			        android:layout_width="20dip"
			        android:layout_height="20dip"
			        android:src="@drawable/ic_launcher"
			        android:scaleType="fitXY" /> 
			        
                <TextView
	                android:id="@+id/mine_info_jion_text"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:paddingLeft="4dp"
	                android:layout_gravity="center_vertical"
	                android:textColor="@color/consultation_color_black"
	                android:text="加入医生团队"/>
            </LinearLayout>

            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:layout_weight="1">
                	
                 <ImageView
			        android:id="@+id/mine_info_jion_image"
			        android:layout_width="wrap_content"
			        android:layout_height="match_parent"
			        android:paddingRight="7dp"
			        android:src="@drawable/icon_item_arrow" />
            </LinearLayout>
        </LinearLayout>
        
     </LinearLayout>
</RelativeLayout>