<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="@drawable/knowledge_recommend_layout_selector"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="10dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/consulation_primary_list_all_item_image"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:layout_marginTop="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/photo_primary" />

        <TextView
            android:id="@+id/consulation_primary_list_all_item_image_count"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="-15dp"
            android:background="@drawable/discussion_count_shape"
            android:gravity="center"
            android:textColor="@color/consultation_color_white"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/consulation_primary_list_all_item_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:singleLine="true"
                android:textColor="#353535" />

            <TextView
                android:id="@+id/consulation_primary_list_all_item_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:textColor="#999999" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/consulation_primary_list_all_item_doctor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:textColor="#999999" />

            <TextView
                android:id="@+id/consulation_primary_list_all_item_state"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:textColor="#FFAF2C" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>