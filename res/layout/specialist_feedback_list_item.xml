<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingTop="8dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="10dp" >

            <ImageView
                android:id="@+id/specialist_info_feedback_item_user_photo"
                android:layout_width="45dip"
                android:layout_height="45dip"
                android:scaleType="fitXY"
                android:src="@drawable/photo_patient" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:paddingRight="15dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/specialist_info_item_name_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:textColor="#999999" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="right" >

                            <RatingBar
                                android:id="@+id/specialist_info_user_feedback_ratingBar"
                                style="@style/roomRatingBar3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:gravity="right"
                                android:maxHeight="20dp"
                                android:minHeight="20dp"
                                android:saveEnabled="false"
                                android:stepSize="0.5" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/specialist_info_item_message_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#353535" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/specialist_info_item_feedbackDate_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|right"
        android:paddingRight="15dp"
        android:paddingBottom="8dp"
        android:textColor="#999999" />

    <LinearLayout
        android:id="@+id/specialist_feedback_item_line"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#DADADA"
        android:visibility="gone"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>