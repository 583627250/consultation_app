<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EBEBEB"
        android:orientation="vertical" >

        <include
	        android:id="@+id/consultation_header"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        layout="@layout/header" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@color/consultation_color_white"
            android:orientation="horizontal" >
            
            <TextView
		        android:id="@+id/recommend_search_no_listView_text"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:visibility="gone"
		        android:textColor="@color/consultation_color_black"
		        android:paddingTop="10dp"
		        android:paddingLeft="7dp"
		        android:paddingRight="7dp"
		        android:paddingBottom="10dp"
		        android:text="对不起！没有该专家" />
			
            <ListView
	            android:id="@+id/knowledge_recommend_list_search_result_listView"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:divider="#DADADA"
                android:dividerHeight="0.1dp" >
        	</ListView>
            
        </LinearLayout>
    </LinearLayout>

</LinearLayout>