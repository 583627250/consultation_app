<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EBEBEB"
        android:orientation="vertical" >

        <include
            android:id="@+id/consultation_header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/header" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.1"
                android:orientation="vertical" >

                <ListView
                    android:id="@+id/test_left_listView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="#DADADA"
                    android:dividerHeight="0.1dp"
                    android:scrollbars="none" >
                </ListView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#DADADA" >
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/consultation_color_black" >
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/consultation_color_white"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/consultation_color_white"
                    android:orientation="vertical"
                    android:padding="10dp" >
                    <LinearLayout
                        android:id="@+id/test_right_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/consultation_color_white"
                        android:orientation="vertical"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp" >
                        
                        <TextView
					        android:id="@+id/test_add_tip_text"
					        android:layout_width="fill_parent"
					        android:layout_height="wrap_content"
					        android:gravity="center"
					        android:visibility="gone"
					        android:textColor="@color/consultation_color_black"
					        android:paddingTop="10dp"
					        android:paddingLeft="7dp"
					        android:paddingRight="7dp"
					        android:paddingBottom="10dp"
					        android:text="对不起！该病例没有图片" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>