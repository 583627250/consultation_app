<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4F4F4"
        android:orientation="vertical" >

        <include
            android:id="@+id/consultation_header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/header" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/consultation_color_white" >

                    <com.consultation.app.view.MyImgScroll
                        android:id="@+id/image_scroll"
                        android:layout_width="fill_parent"
                        android:layout_height="150dp" />

                    <LinearLayout
                        android:id="@+id/image_scroll_layout"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:gravity="center_horizontal|bottom"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp" >
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#CCCCCC" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/consultation_color_white"
                    android:orientation="vertical" >
                    
                    <ListView
                        android:id="@+id/knowledge_listView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="#F4F4F4"
                        android:dividerHeight="0.1dp" >
                    </ListView>

                    <TextView
                        android:id="@+id/knowledge_listView_more"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/knowledge_btn_more_selector"
                        android:gravity="center"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp"
                        android:text="更多"
                        android:textColor="#414141" />
                </LinearLayout>

                <TextView
                    android:id="@+id/department_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:padding="7dp"
                    android:text="热门科室"
                    android:textColor="#414141" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <RelativeLayout
                        android:id="@+id/hot_department_1_layout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="0.1dp" >

                        <LinearLayout
                            android:id="@+id/knowledge_hot_department_fck"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@color/consultation_color_white"
                            android:orientation="vertical"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/fk" />

                            <TextView
                                android:id="@+id/hot_department_1_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="妇产科"
                                android:textColor="#7D7D7D" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/hot_department_2_layout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="0.1dp" >

                        <LinearLayout
                            android:id="@+id/knowledge_hot_department_ek"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@color/consultation_color_white"
                            android:orientation="vertical"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ek" />

                            <TextView
                                android:id="@+id/hot_department_2_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="儿科"
                                android:textColor="#7D7D7D" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/hot_department_3_layout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="0.1dp" >

                        <LinearLayout
                            android:id="@+id/knowledge_hot_department_ct"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@color/consultation_color_white"
                            android:orientation="vertical"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ct" />

                            <TextView
                                android:id="@+id/hot_department_3_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="内科"
                                android:textColor="#7D7D7D" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/hot_department_4_layout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="0.1dp" >

                        <LinearLayout
                            android:id="@+id/knowledge_hot_department_gk"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@color/consultation_color_white"
                            android:orientation="vertical"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/gk" />

                            <TextView
                                android:id="@+id/hot_department_4_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="骨科"
                                android:textColor="#7D7D7D" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <RelativeLayout
                        android:id="@+id/hot_department_5_layout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="0.1dp" >

                        <LinearLayout
                            android:id="@+id/knowledge_hot_department_pfk"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@color/consultation_color_white"
                            android:orientation="vertical"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/pfk" />

                            <TextView
                                android:id="@+id/hot_department_5_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="皮肤科"
                                android:textColor="#7D7D7D" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/hot_department_6_layout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="0.1dp" >

                        <LinearLayout
                            android:id="@+id/knowledge_hot_department_nk"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@color/consultation_color_white"
                            android:orientation="vertical"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/nk" />

                            <TextView
                                android:id="@+id/hot_department_6_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="脑科"
                                android:textColor="#7D7D7D" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/hot_department_7_layout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="0.1dp" >

                        <LinearLayout
                            android:id="@+id/knowledge_hot_department_lrkf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@color/consultation_color_white"
                            android:orientation="vertical"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/lnkf" />

                            <TextView
                                android:id="@+id/hot_department_7_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="老人康复"
                                android:textColor="#7D7D7D" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/hot_department_8_layout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="0.1dp" >

                        <LinearLayout
                            android:id="@+id/knowledge_hot_department_more"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@color/consultation_color_white"
                            android:orientation="vertical"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/more" />

                            <TextView
                                android:id="@+id/hot_department_8_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="更多"
                                android:textColor="#7D7D7D" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>