<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/consultation_color_F4F4F4"
        android:orientation="vertical" >

        <include
            android:id="@+id/consultation_header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/header" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/consultation_color_F4F4F4" >
                </LinearLayout>
                
                <LinearLayout
                    android:id="@+id/create_case_select_expert_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/consultation_color_white"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5" >

                        <TextView
                            android:id="@+id/create_case_select_expert_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="专家"
                            android:textColor="#414141" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0.1dp"
                        android:layout_height="match_parent"
                        android:background="@color/consultation_color_F4F4F4" >
                    </LinearLayout>

                    <EditText
                        android:id="@+id/create_case_select_expert_input_edit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/consultation_color_white"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center_vertical"
                        android:hint="请选择您的专家"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textColorHint="#D3D3D3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingRight="7dp"
                            android:src="@drawable/icon_item_arrow" />
                    </LinearLayout>
                </LinearLayout>

                

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/consultation_color_F4F4F4" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/consultation_color_white"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3.3" >

                        <TextView
                            android:id="@+id/create_case_select_consultation_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="咨询方式"
                            android:textColor="#414141" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0.1dp"
                        android:layout_height="match_parent"
                        android:background="@color/consultation_color_F4F4F4" >
                    </LinearLayout>

                    <RadioGroup
                        android:id="@+id/create_case_select_consultation_radioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical" >

                        <RadioButton
                            android:id="@+id/create_case_select_consultation_explicit"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="明确诊断"
                            android:checked="true"
                            android:textColor="#414141" >
                        </RadioButton>
                        <RadioButton
                            android:id="@+id/create_case_select_consultation_operation"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="手术或住院"
                            android:textColor="#414141" >
                        </RadioButton>
                        <RadioButton
                            android:id="@+id/create_case_select_consultation_public"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:paddingRight="10dp"
                            android:text="公开讨论"
                            android:textColor="#414141" >
                        </RadioButton>
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/consultation_color_F4F4F4" >
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/consultation_color_white"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5" >

                        <TextView
                            android:id="@+id/create_case_patient_name_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="患者姓名"
                            android:textColor="#414141" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0.1dp"
                        android:layout_height="match_parent"
                        android:background="@color/consultation_color_F4F4F4" >
                    </LinearLayout>

                    <EditText
                        android:id="@+id/create_case_patient_name_input_edit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/consultation_color_white"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center_vertical"
                        android:hint="请选择您的患者"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textColorHint="#D3D3D3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingRight="7dp"
                            android:src="@drawable/icon_item_arrow" />
                    </LinearLayout>
                </LinearLayout>
                

                <TextView
                    android:id="@+id/create_case_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="10dp"
                    android:text="标题"
                    android:textColor="#414141" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@color/consultation_color_white"
                    android:orientation="horizontal"
                    android:padding="10dp" >

                    <EditText
                        android:id="@+id/create_case_title_input_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/consultation_color_white"
                        android:gravity="top"
                        android:hint="(必填)用一句话简单描述患者的问题，限定字数5~30个字"
                        android:lines="2"
                        android:maxLength="35"
                        android:textColorHint="#D3D3D3" />
                </LinearLayout>

                <TextView
                    android:id="@+id/create_case_hope_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="10dp"
                    android:text="希望专家提供的帮助"
                    android:textColor="#414141" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/consultation_color_white"
                    android:orientation="horizontal"
                    android:padding="10dp" >

                    <EditText
                        android:id="@+id/create_case_hope_input_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/consultation_color_white"
                        android:gravity="top"
                        android:hint="(必填)请准确表述希望专家提供什么样的帮助，限定字数10~500个字"
                        android:lines="5"
                        android:maxLength="500"
                        android:textColorHint="#D3D3D3" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        
        <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/consultation_color_F4F4F4"
	        android:orientation="vertical" >
            
            <Button
	            android:id="@+id/create_case_btn_submit"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:padding="10dp"
	            android:background="@drawable/create_case_submit_selector"
	            android:textColor="@color/consultation_color_white"
	            android:text="下一步" />
        
        </LinearLayout>
    </LinearLayout>

</LinearLayout>