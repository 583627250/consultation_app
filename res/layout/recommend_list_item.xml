<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="@drawable/knowledge_recommend_layout_selector"
    android:orientation="horizontal" >

    <LinearLayout 
        android:id="@+id/recommend_list_item_layout"
        android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:paddingTop="5dp"
	    android:paddingBottom="5dp"
	    android:orientation="horizontal">
	    
        <LinearLayout 
	        android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="vertical">
	        <TextView
		        android:id="@+id/recommend_list_item_text_title"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="#353535"
		        android:paddingTop="6dp"
		        android:singleLine="true"
		        android:paddingLeft="10dp"
		        android:paddingBottom="2dp" />
	        
	        <TextView
		        android:id="@+id/recommend_list_item_text_author"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:paddingTop="2dp"
		        android:textColor="#999999"
		        android:singleLine="true"
		        android:paddingLeft="10dp"
		        android:paddingBottom="6dp" />
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
	    android:layout_height="match_parent"
	    android:layout_weight="15"
	    android:layout_gravity="center"
	    android:orientation="horizontal">

	    <ImageView
	        android:id="@+id/recommend_item_image"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingRight="10dp"
	        android:layout_gravity="center"
	        android:src="@drawable/icon_item_arrow" />
    </LinearLayout>
</LinearLayout>