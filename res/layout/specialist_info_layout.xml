<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EBEBEB"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="#2CB67A"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <LinearLayout
                android:id="@+id/header_layout_lift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/header_lift_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/back_icon" />

                <TextView
                    android:id="@+id/header_text_lift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="3dp"
                    android:text="返回"
                    android:textColor="@color/consultation_color_white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/header_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="vertical" >

                <com.consultation.app.view.CircularImage
                    android:id="@+id/specialist_info_user_photo"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

                <TextView
                    android:id="@+id/specialist_info_user_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/consultation_color_white" />

                <TextView
                    android:id="@+id/specialist_info_user_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="3dp"
                    android:textColor="#22705A" />
            </LinearLayout>
        </RelativeLayout>
        
        <LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center_vertical"
           android:background="@color/consultation_color_white"
           android:orientation="vertical"
           android:padding="8dp" >

           <TextView
               android:id="@+id/specialist_info_user_goodAt"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="#2CB67A"
               android:text="他的擅长领域" />
           
           <TextView
               android:id="@+id/specialist_info_user_goodAt_text"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingTop="8dp"
               android:textColor="#4A4A4A" />
           
           
       	</LinearLayout>
       	<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#DADADA" >
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="#EBEBEB" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/specialist_info_user_help_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/knowledge_recommend_layout_selector"
                    android:orientation="horizontal"
                    android:padding="8dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/specialist_info_user_help_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="已经帮助患者"
                            android:textColor="#2CB67A" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="right" >

                        <TextView
                            android:id="@+id/specialist_info_user_help_count_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:paddingRight="12dp"
                            android:textColor="#7B7B7B"
                            android:text="0名" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="right"
                            android:paddingRight="10dp"
                            android:src="@drawable/icon_item_arrow" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#DADADA" >
                </LinearLayout>

                <ListView
                    android:id="@+id/specialist_info_user_help_listView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="#DADADA"
                    android:dividerHeight="0.1dp" >
                </ListView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="#EBEBEB" >
                </LinearLayout>
                
                
                <LinearLayout
                    android:id="@+id/specialist_info_user_evaluation_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/knowledge_recommend_layout_selector"
                    android:orientation="horizontal"
                    android:padding="8dp" >

	                <LinearLayout
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="center_vertical"
	                    android:layout_weight="0.7" >
	
	                    <RatingBar
	                        android:id="@+id/specialist_info_user_ratingBar"
	                        style="@style/roomRatingBar2"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_gravity="center_vertical"
	                        android:stepSize="0.5"
	                        android:saveEnabled="false"
	                        android:maxHeight="24dp"
	                        android:minHeight="24dp" />
	                    <TextView
				            android:id="@+id/specialist_info_user_evaluation_score"
				            android:layout_width="match_parent"
				            android:layout_height="match_parent"
				            android:text="0.0分"
				            android:paddingLeft="5dp"
				            android:layout_gravity="center_vertical"
				            android:textColor="#2CB67A"/>
	                </LinearLayout>
	
	                <LinearLayout
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="center_vertical"
	                    android:layout_weight="1"
	                    android:gravity="right" >
	
	                    <TextView
	                        android:id="@+id/specialist_info_user_evaluation_count_text"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:gravity="right"
	                        android:paddingRight="12dp"
	                        android:textColor="#7B7B7B"
	                        android:text="共0条评论" />
	
	                    <ImageView
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_gravity="center"
	                        android:gravity="right"
	                        android:paddingRight="10dp"
	                        android:src="@drawable/icon_item_arrow" />
	                </LinearLayout>
            
				</LinearLayout>
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="0.1dp"
	                android:background="#DADADA" >
	            </LinearLayout>
	
	            <ListView
	                android:id="@+id/specialist_info_user_evaluation_listView"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:divider="#DADADA"
	                android:dividerHeight="0.1dp" >
	            </ListView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>